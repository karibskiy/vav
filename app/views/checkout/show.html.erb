<div><h1><span class="label label-default">Моя корзина</span></h1></div>
<% if @all_items.length == 0 %>
	<div class="no-item">
		<div class="text-center">
			<h2><small>Нет товаров в корзине :(</small></h2>
		</div>
	</div>	
<% else %>
	<div>
		<ul class="list-group">
			
			<% @all_items.each do |i| %>
	  			<li class="list-group-item">
	  				<ul class="list-inline">

		  				<li><span class="label label-success"><%=i.instance_variable_get(:@pname)%></span> </li>
		  				<li><span class="label label-primary"><%=i.created_at%></span> </li>
		  				<li><span><%= button_to 'Удалить', {:controller => "checkout", :action => "destroy",  :id => i.id, :user_id=> current_user} , :method=>:delete , :class=>"btn btn-sm btn-danger" %></span></li>
	  				</ul>
	  			</li>
		  	<% end %>
		</ul>
	</div>
<% end %>